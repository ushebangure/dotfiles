{
   // Explorer
  "explorer.width": 40,
  "explorer.floating.width": -100,
  "explorer.floating.height": -30,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": true,
  "explorer.openAction.strategy": "tab",
  "explorer.keyMappings": {
    "<cr>": ["expandable?", "expand", "open"],
    "v": "open.vsplit"
  },

   // diagnostics
  "diagnostic.errorSign": " ",
  "diagnostic.warningSign": " ",
  "diagnostic.infoSign": "",
  "diagnostic.hintSign": " ",
  "diagnostic.virtualText": true,

  "languageserver": {
     "golang": {
       "command": "gopls",
	"rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
	"filetypes": ["go"]
      }
  }
}
